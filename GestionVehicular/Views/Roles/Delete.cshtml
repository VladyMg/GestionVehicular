@model GestionVehicular.Models.Role

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-secondary">Delete</h1>

<h3>¿Está seguro de quere eliminar éste registro?</h3>
<div>
    <h4 class="text-success">Rol</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Activo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EsActivo)
        </dd>
        <dt class="col-sm-2">
            Fecha de Creación
        </dt>
        <dd class="col-sm-10">
            @{
                var fechaNacimiento = ((DateTime)Model.FechaCreacion).ToString("yyyy-MM-dd");
            }
            @fechaNacimiento
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RolId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
