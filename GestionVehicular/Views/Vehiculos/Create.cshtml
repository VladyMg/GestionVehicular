@model GestionVehicular.Models.Vehiculo

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-secondary">Nuevo</h1>

<h4 class="text-success">Vehículo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroChasis" class="control-label">Número de Chasis</label>
                <input asp-for="NumeroChasis" class="form-control" />
                <span asp-validation-for="NumeroChasis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroMotor" class="control-label">Número de Motor</label>
                <input asp-for="NumeroMotor" class="form-control" />
                <span asp-validation-for="NumeroMotor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kilometraje" class="control-label"></label>
                <input asp-for="Kilometraje" class="form-control" />
                <span asp-validation-for="Kilometraje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cilindraje" class="control-label"></label>
                <input asp-for="Cilindraje" class="form-control" />
                <span asp-validation-for="Cilindraje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadCarga" class="control-label">Capacidad de Carga</label>
                <input asp-for="CapacidadCarga" class="form-control" />
                <span asp-validation-for="CapacidadCarga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadPasajero" class="control-label">Capacidad de Pasajeros</label>
                <input asp-for="CapacidadPasajero" class="form-control" />
                <span asp-validation-for="CapacidadPasajero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubcircuitoId" class="control-label">Subcircuito</label>
                <select asp-for="SubcircuitoId" class="form-control" asp-items="ViewBag.SubcircuitoId"></select>
            </div>
            <hr />
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
