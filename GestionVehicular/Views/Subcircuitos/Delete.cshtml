@model GestionVehicular.Models.Subcircuito

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-secondary">Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-success">Subcircuito</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NoSubcircuito)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NoSubcircuito)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodSubcircuito)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodSubcircuito)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Circuito)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Circuito.CodCircuito)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EsActivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EsActivo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class="col-sm-10">
            @{
                var fechaNacimiento = ((DateTime)Model.FechaCreacion).ToString("yyyy-MM-dd");
            }
            @fechaNacimiento
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SubcircuitoId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
