@model GestionVehicular.Models.Subcircuito

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-secondary">Nuevo</h1>

<h4 class="text-success">Subcircuito</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoSubcircuito" class="control-label"></label>
                <input asp-for="NoSubcircuito" class="form-control" />
                <span asp-validation-for="NoSubcircuito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodSubcircuito" class="control-label"></label>
                <input asp-for="CodSubcircuito" class="form-control" />
                <span asp-validation-for="CodSubcircuito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CircuitoId" class="control-label">Circuito</label>
                <select asp-for="CircuitoId" class="form-control" asp-items="ViewBag.CircuitoId"></select>
            </div>
            <hr />
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
