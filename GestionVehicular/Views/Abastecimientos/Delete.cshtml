@model GestionVehicular.Models.Abastecimiento

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-secondary">Borrar</h1>

<h3>¿Está seguro de quere eliminar éste registro?</h3>
<div>
    <h4 class="text-success">Abastecimiento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gasolinera)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gasolinera)
        </dd>
        <dt class="col-sm-2">
            Hora de Llegada
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraLlegada)
        </dd>
        <dt class="col-sm-2">
            Hora de Salida
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraSalida)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Combustible)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Combustible)
        </dd>
        <dt class="col-sm-2">
            Kilometros de Salida
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KilometrosSalida)
        </dd>
        <dt class="col-sm-2">
            Responsable
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nombre) @Html.DisplayFor(model => model.Usuario.Apellido)
        </dd>
        <dt class="col-sm-2">
            Vehículo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehiculo.Placa)
        </dd>
        <dt class="col-sm-2">
            Gasolinera
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gasolineras.Nombre)
        </dd>
        
        <dt class="col-sm-2">
            Activo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EsActivo)
        </dd>
        <dt class="col-sm-2">
            Fecha de Creación
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AbastecimientoId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
