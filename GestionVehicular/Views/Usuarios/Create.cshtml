@model GestionVehicular.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-secondary">Nuevo</h1>

<h4 class="text-success">Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenia" class="control-label">Contraseña</label>
                <input asp-for="Contrasenia" class="form-control" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoSangre" class="control-label">Tipo de Sangre</label>
                @Html.DropDownListFor(
                model => model.TipoSangre,
                new SelectList(new[]
                {
                new SelectListItem { Value = "A+", Text = "A+" },
                new SelectListItem { Value = "A-", Text = "A-" },
                new SelectListItem { Value = "B+", Text = "B+" },
                new SelectListItem { Value = "B-", Text = "B-" },
                new SelectListItem { Value = "AB+", Text = "AB+" },
                new SelectListItem { Value = "AB-", Text = "AB-" },
                new SelectListItem { Value = "O+", Text = "O+" },
                new SelectListItem { Value = "O-", Text = "O-" }
                }, "Value", "Text"),
                "Selecciona el tipo de sangre",
                new { @class = "form-control" }
                )
                <span asp-validation-for="TipoSangre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CiudadNacimiento" class="control-label">Ciudad de Nacimiento</label>
                <input asp-for="CiudadNacimiento" class="form-control" />
                <span asp-validation-for="CiudadNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rango" class="control-label"></label>
                @Html.DropDownListFor(
                model => model.Rango,
                new SelectList(new[]
                {
                new SelectListItem { Value = "Sargento Primero", Text = "Sargento Primero" },
                new SelectListItem { Value = "Sargento Segundo", Text = "Sargento Segundo" },
                new SelectListItem { Value = "Cabo Primero", Text = "Cabo Primero" },
                new SelectListItem { Value = "Cabo Segundo", Text = "Cabo Segundo" },
                new SelectListItem { Value = "Policía", Text = "Policía" },
                }, "Value", "Text"),
                "Selecciona el Rango",
                new { @class = "form-control" }
                )
                <span asp-validation-for="Rango" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RolId" class="control-label">Rol</label>
                <select asp-for="RolId" class="form-control" asp-items="ViewBag.RolId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SubcircuitoId" class="control-label">Subcircuito</label>
                <select asp-for="SubcircuitoId" class="form-control" asp-items="ViewBag.SubcircuitoId"></select>
            </div>

            <hr />
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
