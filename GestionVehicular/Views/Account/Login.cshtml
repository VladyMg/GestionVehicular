@model GestionVehicular.Models.Role
@{
    ViewData["Title"] = "Bienvenido";
    Layout = "~/Views/Shared/_NoNavLayout.cshtml";
}

<link rel="stylesheet" href="~/@(nameof(GestionVehicular)).styles.css" />

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form method="post" style="width: 23rem;">
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">@ViewData["Title"]</h3>

                        <div class="form-outline mb-4">
                            <input type="text" class="form-control form-control-lg" id="Cedula" name="Cedula">
                            <label for="Cedula">Cédula</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" class="form-control form-control-lg" id="Contrasenia" name="Contrasenia">
                            <label for="Contrasenia">Contraseña</label>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block">Iniciar sesión</button>
                        </div>

                        <p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">¿Olvidó su contraseña?</a></p>

                        <div class="text-danger">@ViewData["ErrorMessage"]</div>
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/img/login-1.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: center;">
            </div>
        </div>
    </div>
</section>