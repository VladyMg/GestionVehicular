@model IEnumerable<GestionVehiculos.Models.Role>

<h2>Roles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.RolId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.RolId })
            </td>
        </tr>
    }
</table>
